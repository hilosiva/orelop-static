{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll": true
  },
  "less.validate": false,
  "scss.validate": false,
  "css.validate": false,
  "stylelint.validate": ["css", "less", "postcss", "scss", "sass"],
  "files.associations": {
    "*.css": "postcss"
  }
}
